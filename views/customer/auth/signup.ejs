  <%- include('../../shared/includes/head', { pageTitle: 'Signup' }) %> 
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header') %> 

  <main>
    <h1>Create New Account</h1>

    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">

      <div class="input-wrapper">
        <label for="email">E-mail</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="input-wrapper">
        <label for="confirm-email">Confirmar o E-mail</label>
        <input type="email" id="confirm-email" name="confirm-email" required>
      </div>
      <div class="input-wrapper">
        <label for="password">Senha</label>
        <input type="password" id="password" name="password" minlength="6" required>
      </div>
      <hr>
      <div class="input-wrapper">
        <label for="fullname">Nome Completo</label>
        <input type="text" id="fullname" name="fullname" required>
      </div>
      <div class="input-wrapper">
        <label for="street">Endere√ßo</label>
        <input type="text" id="street" name="street" required>
      </div>
      <div class="input-wrapper">
        <label for="postal">CEP</label>
        <input type="number" id="postal" name="postal" minlength="8" maxlength="8" required>
      </div>
      <div class="input-wrapper">
        <label for="city">Cidade</label>
        <input type="text" id="city" name="city" required>
      </div>

      <button class="button">Create Account</button>

      <p class="swith-form"><a href="/login">Login instead</a></p>
    </form>

  </main>


<%- include('../../shared/includes/footer') %> 